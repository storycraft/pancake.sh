{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "skipLibCheck": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCase"
        }
      },
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "paths": {
      "@templates/*": [
        "./src/templates/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@components/*": [
        "./src/components/*"
      ]
    }
  },
  "files": [
    "./eslint.config.mjs",
    "./vite.config.ts",
    "./astro.config.ts",
    ".astro/types.d.ts"
  ],
  "include": [
    "./.storybook/**/*",
    "./src"
  ]
}
---
import { user } from '../../user';
import './global.css';
import Router from '@templates/router/index.astro';

export type Props = {
  title: string;
};

---

<html>
  <head>
    <title>{Astro.props.title}</title>
    <meta name="viewport" content="initial-scale=1.0" />
    <meta charset="utf-8" />
    <Router />
    <style>
      .footer {
        padding: 3rem 3rem;
      }

      .text {
        color: rgb(120, 120, 120);
      }
    </style>
  </head>
  <body>
    <slot />
    <footer class="footer" transition:persist>
      <p class="text">Contact Detail</p>
      <span class="text">{user.profile.name} / {user.loginId}</span>
      <address class="text">{user.email}</address>
    </footer>
  </body>
</html>
